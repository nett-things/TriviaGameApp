<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/nav_graph"
	app:startDestination="@id/menuFragment">

	<fragment
		android:id="@+id/menuFragment"
		android:name="com.net3hings.triviagameapp.MenuFragment"
		android:label=" "
		tools:layout="@layout/fragment_menu">
		<action
			android:id="@+id/action_menuFragment_to_setupFragment"
			app:destination="@id/setupFragment" />
		<action
			android:id="@+id/action_menuFragment_to_statisticsFragment"
			app:destination="@id/statisticsFragment" />
		<action
			android:id="@+id/action_menuFragment_to_settingsFragment"
			app:destination="@id/settingsFragment" />
	</fragment>
	<fragment
		android:id="@+id/questionFragment"
		android:name="com.net3hings.triviagameapp.QuestionFragment"
		android:label=" "
		tools:layout="@layout/fragment_question">
		<argument
			android:name="numOfQuestions"
			app:argType="integer" />
		<argument
			android:name="category"
			app:argType="integer" />
		<argument
			android:name="difficulty"
			app:argType="integer" />
		<argument
			android:name="type"
			app:argType="integer" />
		<argument
			android:name="questions"
			app:argType="com.net3hings.triviagameapp.question.Question[]" />
		<action
			android:id="@+id/action_questionFragment_to_endgameFragment"
			app:destination="@id/endgameFragment" />
	</fragment>
	<fragment
		android:id="@+id/loadingFragment"
		android:name="com.net3hings.triviagameapp.LoadingFragment"
		android:label=" "
		tools:layout="@layout/fragment_loading">
		<action
			android:id="@+id/action_loadingFragment_to_questionFragment"
			app:destination="@id/questionFragment" />
		<argument
			android:name="numOfQuestions"
			app:argType="integer" />
		<argument
			android:name="category"
			app:argType="integer" />
		<argument
			android:name="difficulty"
			app:argType="com.net3hings.triviagameapp.question.Question$Difficulty" />
		<argument
			android:name="type"
			app:argType="com.net3hings.triviagameapp.question.Question$Type" />
	</fragment>
	<fragment
		android:id="@+id/setupFragment"
		android:name="com.net3hings.triviagameapp.SetupFragment"
		android:label="Game setup"
		tools:layout="@layout/fragment_setup">
		<action
			android:id="@+id/action_setupFragment_to_loadingFragment"
			app:destination="@id/loadingFragment" />
	</fragment>
	<fragment
		android:id="@+id/endgameFragment"
		android:name="com.net3hings.triviagameapp.EndgameFragment"
		android:label=" "
		tools:layout="@layout/fragment_endgame">
		<argument
			android:name="numOfQuestions"
			app:argType="integer" />
		<argument
			android:name="correctAnswers"
			app:argType="integer" />
		<argument
			android:name="score"
			app:argType="integer" />
	</fragment>
	<fragment
		android:id="@+id/statisticsFragment"
		android:name="com.net3hings.triviagameapp.StatisticsFragment"
		android:label="Statistics"
		tools:layout="@layout/fragment_statistics" />
	<fragment
		android:id="@+id/settingsFragment"
		android:name="com.net3hings.triviagameapp.SettingsFragment"
		android:label="Settings" />
</navigation>