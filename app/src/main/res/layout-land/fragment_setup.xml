<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".SetupFragment" >

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:id="@+id/setup_linear_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:baselineAligned="false"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent">

				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1">

					<TextView
						android:id="@+id/num_of_questions_label"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="16dp"
						android:layout_marginTop="24dp"
						android:layout_marginEnd="16dp"
						android:text="@string/number_of_questions_label_text"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent" />

					<com.google.android.material.slider.Slider
						android:id="@+id/number_of_questions_slider"
						android:layout_width="0dp"
						android:layout_height="48dp"
						android:layout_marginTop="8dp"
						android:valueFrom="5.0"
						android:valueTo="50.0"
						android:stepSize="5.0"
						android:value="10.0"
						app:layout_constraintEnd_toEndOf="@+id/num_of_questions_label"
						app:layout_constraintStart_toStartOf="@+id/num_of_questions_label"
						app:layout_constraintTop_toBottomOf="@+id/num_of_questions_label" />

					<TextView
						android:id="@+id/category_label"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="16dp"
						android:layout_marginTop="24dp"
						android:layout_marginEnd="16dp"
						android:text="@string/category_label_text"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toBottomOf="@+id/number_of_questions_slider" />

					<com.google.android.material.textfield.TextInputLayout
						android:id="@+id/category_input"
						style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						app:layout_constraintEnd_toEndOf="@+id/category_label"
						app:layout_constraintStart_toStartOf="@+id/category_label"
						app:layout_constraintTop_toBottomOf="@+id/category_label">

						<AutoCompleteTextView
							android:id="@+id/category_input_autocomplete"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:inputType="none"
							app:simpleItems="@array/category_array"
							tools:ignore="LabelFor" />

					</com.google.android.material.textfield.TextInputLayout>



				</androidx.constraintlayout.widget.ConstraintLayout>

				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1">

					<TextView
						android:id="@+id/difficulty_label"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="16dp"
						android:layout_marginTop="24dp"
						android:layout_marginEnd="16dp"
						android:text="@string/difficulty_label_text"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toTopOf="parent" />

					<com.google.android.material.chip.ChipGroup
						android:id="@+id/difficulty_chipGroup"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:orientation="horizontal"
						app:singleSelection="true"
						app:layout_constraintEnd_toEndOf="@+id/difficulty_label"
						app:layout_constraintStart_toStartOf="@+id/difficulty_label"
						app:layout_constraintTop_toBottomOf="@+id/difficulty_label">

						<com.google.android.material.chip.Chip
							android:id="@+id/difficulty_any_chip"
							style="@style/Widget.Material3.Chip.Filter"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:checked="true"
							android:text="@string/any_text"/>

						<com.google.android.material.chip.Chip
							android:id="@+id/difficulty_easy_chip"
							style="@style/Widget.Material3.Chip.Filter"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/easy_text" />

						<com.google.android.material.chip.Chip
							android:id="@+id/difficulty_medium_chip"
							style="@style/Widget.Material3.Chip.Filter"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/medium_text" />

						<com.google.android.material.chip.Chip
							android:id="@+id/difficulty_hard_chip"
							style="@style/Widget.Material3.Chip.Filter"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/hard_text" />
					</com.google.android.material.chip.ChipGroup>

					<TextView
						android:id="@+id/type_label"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginStart="16dp"
						android:layout_marginTop="24dp"
						android:layout_marginEnd="16dp"
						android:text="@string/type_label_text"
						app:layout_constraintEnd_toEndOf="parent"
						app:layout_constraintStart_toStartOf="parent"
						app:layout_constraintTop_toBottomOf="@+id/difficulty_chipGroup" />

					<com.google.android.material.chip.ChipGroup
						android:id="@+id/type_chipGroup"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:orientation="horizontal"
						app:singleSelection="true"
						app:layout_constraintEnd_toEndOf="@+id/type_label"
						app:layout_constraintStart_toStartOf="@+id/type_label"
						app:layout_constraintTop_toBottomOf="@+id/type_label">

						<com.google.android.material.chip.Chip
							android:id="@+id/type_any_chip"
							style="@style/Widget.Material3.Chip.Filter"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:checked="true"
							android:text="@string/any_text"/>

						<com.google.android.material.chip.Chip
							android:id="@+id/type_multiple_choice_chip"
							style="@style/Widget.Material3.Chip.Filter"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:text="@string/multiple_choice_text" />

						<com.google.android.material.chip.Chip
							android:id="@+id/type_true_false_chip"
							style="@style/Widget.Material3.Chip.Filter"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:text="@string/true_false_text" />
					</com.google.android.material.chip.ChipGroup>

				</androidx.constraintlayout.widget.ConstraintLayout>

			</LinearLayout>

			<Button
				android:id="@+id/start_game_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="32dp"
				android:text="@string/start_game_button"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/setup_linear_layout" />

		</androidx.constraintlayout.widget.ConstraintLayout>

	</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>