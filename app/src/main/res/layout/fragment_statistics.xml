<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".StatisticsFragment" >

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/data_container"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="gone"
				tools:visibility="visible">

				<TextView
					android:id="@+id/most_played_category_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="24dp"
					android:layout_marginTop="24dp"
					android:text="@string/most_played_category_label_text"
					android:textColor="?android:attr/textColorPrimary"
					android:textSize="16sp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent" />

				<TextView
					android:id="@+id/most_played_category"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="36dp"
					android:layout_marginTop="8dp"
					android:text="@string/most_played_category_text"
					android:textSize="14sp"
					android:textStyle="bold"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/most_played_category_label" />

				<TextView
					android:id="@+id/most_played_category_percent"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:text="@string/most_played_category_percent_text"
					app:layout_constraintBottom_toBottomOf="@+id/most_played_category"
					app:layout_constraintStart_toEndOf="@+id/most_played_category"
					app:layout_constraintTop_toTopOf="@+id/most_played_category" />

				<View
					android:id="@+id/average_correct_answers_divider"
					style="@style/Divider"
					android:layout_marginTop="24dp"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/most_played_category" />

				<TextView
					android:id="@+id/average_correct_answers_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="24dp"
					android:layout_marginTop="24dp"
					android:text="@string/average_correct_answers_label_text"
					android:textColor="?android:attr/textColorPrimary"
					android:textSize="16sp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/average_correct_answers_divider" />

				<TextView
					android:id="@+id/average_correct_answers"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="36dp"
					android:layout_marginTop="8dp"
					android:text="@string/average_correct_answers_text"
					android:textSize="14sp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/average_correct_answers_label" />

				<com.patrykandpatrick.vico.views.chart.ChartView
					android:id="@+id/average_correct_answers_chart"
					android:layout_width="0dp"
					android:layout_height="176dp"
					android:layout_marginEnd="24dp"
					app:chart="line"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/average_correct_answers"
					app:showBottomAxis="false"
					app:showStartAxis="true" />

				<View
					android:id="@+id/average_score_divider"
					style="@style/Divider"
					android:layout_marginTop="24dp"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/average_correct_answers_chart" />

				<TextView
					android:id="@+id/average_score_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="24dp"
					android:layout_marginTop="24dp"
					android:layout_marginEnd="24dp"
					android:text="@string/average_score_label_text"
					android:textColor="?android:attr/textColorPrimary"
					android:textSize="16sp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/average_score_divider" />

				<TextView
					android:id="@+id/average_score"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="36dp"
					android:layout_marginTop="8dp"
					android:text="@string/average_score_text"
					android:textSize="14sp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/average_score_label" />

				<com.patrykandpatrick.vico.views.chart.ChartView
					android:id="@+id/average_score_chart"
					android:layout_width="0dp"
					android:layout_height="176dp"
					android:layout_marginEnd="24dp"
					app:chart="line"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/average_score"
					app:showBottomAxis="false"
					app:showStartAxis="true" />

				<View
					android:id="@+id/average_answer_time_divider"
					style="@style/Divider"
					android:layout_marginTop="24dp"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/average_score_chart" />

				<TextView
					android:id="@+id/average_answer_time_label"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="24dp"
					android:layout_marginTop="24dp"
					android:layout_marginEnd="24dp"
					android:text="@string/average_answer_time_label_text"
					android:textColor="?android:attr/textColorPrimary"
					android:textSize="16sp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/average_answer_time_divider" />

				<TextView
					android:id="@+id/average_answer_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="36dp"
					android:layout_marginTop="8dp"
					android:text="@string/average_answer_time_text"
					android:textSize="14sp"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/average_answer_time_label" />

				<com.patrykandpatrick.vico.views.chart.ChartView
					android:id="@+id/average_answer_time_chart"
					android:layout_width="0dp"
					android:layout_height="176dp"
					android:layout_marginEnd="24dp"
					app:chart="line"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toBottomOf="@+id/average_answer_time"
					app:showBottomAxis="false"
					app:showStartAxis="true" />


			</androidx.constraintlayout.widget.ConstraintLayout>

			<TextView
				android:id="@+id/no_data_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="98dp"
				android:text="@string/no_data_label_text"
				android:visibility="gone"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				tools:visibility="gone" />

			<ProgressBar
				android:id="@+id/progressBar"
				style="?android:attr/progressBarStyle"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:indeterminate="true"
				android:visibility="visible"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				tools:visibility="gone" />

		</androidx.constraintlayout.widget.ConstraintLayout>


	</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>