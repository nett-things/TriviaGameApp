<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".SetupFragment" >

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/num_of_questions_label"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_marginTop="24dp"
				android:layout_marginEnd="16dp"
				android:text="@string/number_of_questions_label_text"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<SeekBar
				android:id="@+id/number_of_questions_seekbar"
				android:layout_width="0dp"
				android:layout_height="48dp"
				android:layout_marginTop="8dp"
				android:min="1"
				android:max="10"
				android:progress="2"
				app:layout_constraintEnd_toEndOf="@+id/num_of_questions_label"
				app:layout_constraintStart_toStartOf="@+id/num_of_questions_label"
				app:layout_constraintTop_toBottomOf="@+id/num_of_questions_label" />

			<TextView
				android:id="@+id/category_label"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_marginTop="24dp"
				android:layout_marginEnd="16dp"
				android:text="@string/category_label_text"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/number_of_questions_seekbar" />

			<Spinner
				android:id="@+id/category_spinner"
				android:layout_width="0dp"
				android:layout_height="48dp"
				android:layout_marginTop="8dp"
				android:entries="@array/category_array"
				app:layout_constraintEnd_toEndOf="@+id/category_label"
				app:layout_constraintStart_toStartOf="@+id/category_label"
				app:layout_constraintTop_toBottomOf="@+id/category_label" />

			<TextView
				android:id="@+id/difficulty_label"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_marginTop="24dp"
				android:layout_marginEnd="16dp"
				android:text="@string/difficulty_label_text"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/category_spinner" />

			<RadioGroup
				android:id="@+id/difficulty_radioGroup"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:orientation="horizontal"
				app:layout_constraintEnd_toEndOf="@+id/difficulty_label"
				app:layout_constraintStart_toStartOf="@+id/difficulty_label"
				app:layout_constraintTop_toBottomOf="@+id/difficulty_label">

				<RadioButton
					android:id="@+id/difficulty_any_radioButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:checked="true"
					android:text="@string/any_text"/>

				<RadioButton
					android:id="@+id/difficulty_easy_radioButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/easy_text" />

				<RadioButton
					android:id="@+id/difficulty_medium_radioButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/medium_text" />

				<RadioButton
					android:id="@+id/difficulty_hard_radioButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/hard_text" />
			</RadioGroup>

			<TextView
				android:id="@+id/type_label"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_marginTop="24dp"
				android:layout_marginEnd="16dp"
				android:text="@string/type_label_text"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/difficulty_radioGroup" />

			<RadioGroup
				android:id="@+id/type_radioGroup"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:orientation="horizontal"
				app:layout_constraintEnd_toEndOf="@+id/type_label"
				app:layout_constraintStart_toStartOf="@+id/type_label"
				app:layout_constraintTop_toBottomOf="@+id/type_label">

				<RadioButton
					android:id="@+id/type_any_radioButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:checked="true"
					android:text="@string/any_text"/>

				<RadioButton
					android:id="@+id/type_multiple_choice_radioButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/multiple_choice_text" />

				<RadioButton
					android:id="@+id/type_true_false_radioButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/true_false_text" />
			</RadioGroup>

			<Button
				android:id="@+id/start_game_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="32dp"
				android:text="@string/start_game_button"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/type_radioGroup" />

		</androidx.constraintlayout.widget.ConstraintLayout>
	</ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>