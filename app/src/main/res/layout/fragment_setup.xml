<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".SetupFragment" >

	<TextView
		android:id="@+id/num_of_questions_label"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="24dp"
		android:layout_marginEnd="16dp"
		android:text="@string/number_of_questions_label_text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<SeekBar
		android:id="@+id/number_of_questions_seekbar"
		android:layout_width="0dp"
		android:layout_height="48dp"
		android:layout_marginTop="8dp"
		android:min="10"
		android:max="50"
		app:layout_constraintEnd_toEndOf="@+id/num_of_questions_label"
		app:layout_constraintStart_toStartOf="@+id/num_of_questions_label"
		app:layout_constraintTop_toBottomOf="@+id/num_of_questions_label" />

	<TextView
		android:id="@+id/category_label"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="24dp"
		android:layout_marginEnd="16dp"
		android:text="@string/category_label_text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/number_of_questions_seekbar" />

	<Spinner
		android:id="@+id/category_spinner"
		android:layout_width="0dp"
		android:layout_height="48dp"
		android:layout_marginTop="8dp"
		android:entries="@array/category_array"
		app:layout_constraintEnd_toEndOf="@+id/category_label"
		app:layout_constraintStart_toStartOf="@+id/category_label"
		app:layout_constraintTop_toBottomOf="@+id/category_label" />

	<TextView
		android:id="@+id/difficulty_label"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="24dp"
		android:layout_marginEnd="16dp"
		android:text="@string/difficulty_label_text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/category_spinner" />

	<Spinner
		android:id="@+id/difficulty_spinner"
		android:layout_width="0dp"
		android:layout_height="48dp"
		android:layout_marginTop="8dp"
		android:entries="@array/difficulty_array"
		app:layout_constraintEnd_toEndOf="@+id/difficulty_label"
		app:layout_constraintStart_toStartOf="@+id/difficulty_label"
		app:layout_constraintTop_toBottomOf="@+id/difficulty_label" />

	<TextView
		android:id="@+id/type_label"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="24dp"
		android:layout_marginEnd="16dp"
		android:text="@string/type_label_text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/difficulty_spinner" />

	<Spinner
		android:id="@+id/type_spinner"
		android:layout_width="0dp"
		android:layout_height="48dp"
		android:layout_marginTop="8dp"
		android:entries="@array/type_array"
		app:layout_constraintEnd_toEndOf="@+id/type_label"
		app:layout_constraintStart_toStartOf="@+id/type_label"
		app:layout_constraintTop_toBottomOf="@+id/type_label" />

	<Button
		android:id="@+id/start_game_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="32dp"
		android:text="@string/start_game_button"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/type_spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>